import React from 'react';
import { useState } from 'react';

// ProductCard component displays a single product with its details.
// It receives 'product' as a prop, which is an object containing
// name, price, and stock status.
function ProductCard({ product }) {
  const { name, price, stockStatus } = product;

  // Determine the color of the stock status text based on the status value.
  const stockColor = stockStatus === 'In Stock' ? 'text-green-500' : 'text-red-500';

  return (
    <div className="bg-white p-6 rounded-2xl shadow-lg border border-gray-200 w-full max-w-xs mx-auto my-4 transition-transform transform hover:scale-105">
      <h2 className="text-2xl font-bold text-gray-800 mb-2">{name}</h2>
      <p className="text-gray-600 text-xl font-medium mb-1">${price.toFixed(2)}</p>
      <p className="text-sm font-semibold">
        Status: <span className={stockColor}>{stockStatus}</span>
      </p>
    </div>
  );
}

// The main App component renders multiple ProductCard instances
// with different data to demonstrate reusability.
export default function App() {
  const products = [
    { name: 'Wireless Mouse', price: 29.99, stockStatus: 'In Stock' },
    { name: 'Mechanical Keyboard', price: 89.50, stockStatus: 'Out of Stock' },
    { name: 'USB-C Hub', price: 45.00, stockStatus: 'In Stock' },
    { name: 'HD Webcam', price: 75.25, stockStatus: 'In Stock' },
  ];

  return (
    <div className="min-h-screen bg-gradient-to-r from-blue-100 to-purple-100 flex flex-col items-center justify-center p-4 font-sans text-center">
      <header className="mb-8">
        <h1 className="text-4xl font-extrabold text-gray-800 mb-2">Product Showcase</h1>
        <p className="text-lg text-gray-600">
          This is a showcase of the reusable ProductCard component.
        </p>
      </header>
      <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 w-full max-w-6xl">
        {/* Map over the products array to render a ProductCard for each item */}
        {products.map((product, index) => (
          <ProductCard key={index} product={product} />
        ))}
      </div>
    </div>
  );
}
